//static for global variable//
#include<stdio.h>
int fun(int n)
{
statifc int x=0;//without this the function is normal//
if (n>0)
{
x++;//without this the function is not static//
return fun(n-1)+x;
}
return 0;
}
int main()
{
int r;
r=fun(5);
printf("%d",r);
return 0;
}
